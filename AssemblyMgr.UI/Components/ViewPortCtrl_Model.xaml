    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="View Template"
                   VerticalAlignment="Center"
                   Grid.Column="1"
                   Grid.Row="0" />
            <Border Grid.Column="1"
                    Grid.Row="1"
                    BorderBrush="LightSteelBlue"
                    BorderThickness="1"
                    Padding="4"
                    CornerRadius="5"
                    Background="White"
                    Margin="2">
                <ComboBox IsEditable="True"
                          BorderThickness="0"
                          IsTextSearchCaseSensitive="False"
                          IsTextSearchEnabled="True"
                          ItemsSource="{Binding Controller.ViewTemplates}"
                          SelectedItem="{Binding ViewPort.ViewTemplate, UpdateSourceTrigger=LostFocus}" />
            </Border>
            <Label Content="Orientation"
                   Grid.Column="2"
                   Grid.Row="0"
                   Margin="8,0,0,0"
                   Visibility="{Binding ViewPort.DirectionControl.Visibility}"
                   x:Name="DirectionControlLabel" />
            <Border Grid.Column="2"
                    Grid.Row="1"
                    Grid.RowSpan="4"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    CornerRadius="5"
                    Margin="8,2"
                    BorderBrush="LightSteelBlue"
                    Background="White"
                    DataContext="{Binding ViewPort.DirectionVM}"
                    Visibility="{Binding ElementName=DirectionControlLabel, Path=Visibility}">
                <ContentPresenter Content="{Binding DataContext.ViewPort.DirectionControl, 
                    RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ModelViewPort}}}" />
            </Border>
            <Label Content="Annotations"
                   Grid.Row="2"
                   Grid.Column="1"
                   VerticalAlignment="Center" />
