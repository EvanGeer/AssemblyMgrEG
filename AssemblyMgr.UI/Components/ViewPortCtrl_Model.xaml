                </Border>
                <ToggleButton Grid.Row="2"
                              Content="&#xE8EC;"
                              FontFamily="Segoe MDL2 Assets"
                              Grid.Column="1"
                              FontSize="20"
                              Margin="2,0,2,0"
                              ToolTip="Tags"
