                <ToggleButton Grid.Row="2"
                              FontFamily="Segoe MDL2 Assets"
                              Grid.Column="0"
                              Margin="2"
                              FontSize="14"
                              ToolTip="Dimensions"
                              IsChecked="{Binding HasDimensions}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="&#xF8AC;"
                                   FontSize="10"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="&#xF8AB;"
                                   Margin="-2,0,-2,0"
                                   Grid.Column="1" />
                        <TextBlock Text="&#xF8AD;"
                                   Grid.Column="2"
                                   FontSize="10"
